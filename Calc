
#include "stdafx.h"
#include <iostream>
#include <cstdlib>
#include <ctime> //rand
#include <algorithm> //swap
using namespace std;

double A, B, wynik;
char operacaja_matematyczna;

int main()
{
	cout << "podaj dwie zmienne"<< '\n' << "A=";
	cin >> A;
	cout << "podaj zmienna" << '\n' << "B=";
	cin >> B;

	cout << "co chcesz zrobic?"<<endl;
	cout << "[+]dodawanie" << '\n' << "[-] odejmowanie" << '\n' << "[*]mnozenie"<< '\n'<<"[/]dzielenie" << endl;
	
	cin >> operacaja_matematyczna;

	switch (operacaja_matematyczna)
	{
	case '+':
		wynik = A + B;
		break;

	case '-':
		wynik = A - B;
		break;

	case '*':
		wynik = A*B;
		break;

	case '/':
		if (B==0)
		{
			cout << "nie dzielimy przez 0" << endl;
		}
		else
		{
			wynik = A / B;
		}
	}
	
	if ((operacaja_matematyczna == '/') && (B == 0))
	{
		return 0;
	}
	else
	{
		cout << wynik << endl;
	}

	system("pause");
		return 0;
}


